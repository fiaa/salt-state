{% set load_warn = '1.75,1.5,1.0' -%}
{% set load_crit = '3.5,3.25,3.0' -%}

{
  "checks": {
    "check-system-load": {
        "command": "/etc/sensu/plugins/load/check-load.rb -w {{ load_warn }} -c {{ load_crit }}",
        "handlers": ["default"],
        "interval": 60,
        "subscribers": [ "all" ]
    {#    "standalone": true #}
    }
  }
}
